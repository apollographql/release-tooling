{
  extends: [
    'github>apollographql/renovate-config-apollo-open-source:default.json5'
  ],
  minimumReleaseAge: '3 days',
  updateNotScheduled: true,
  prCreation: "immediate",
  // NOTE: This doesn't mean that Renovate will run every second or at the limit of the precision of the cron syntax.
  // This is simply an expression of when Renovate **is allowed** to update things on the repo. We want it to happen
  // whenever an update is pushed by SecOps, who run our Renovate instance, and since that happens once a day we don't
  // want to miss one. For more information see: https://docs.renovatebot.com/configuration-options/#schedule
  schedule: [
    '* * * * * *'
  ]
}
